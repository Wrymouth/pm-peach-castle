{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Mod",
      "type": "shell",
      "command": "nix --extra-experimental-features \"flakes nix-command\" develop --profile .nix-profile --command ./run",
      "problemMatcher": "$gcc",
      "group": {
        "kind": "build",
      }
    },
    {
      "label": "Configure Mod",
      "type": "shell",
      "command": "nix develop --profile .nix-profile -c ./configure --clean",
      "problemMatcher": "$gcc",
      "group": {
        "kind": "build",
      }
    },
  ]
}
